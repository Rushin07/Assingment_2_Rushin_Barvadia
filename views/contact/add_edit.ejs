<%- include ../partials/header.ejs %>

    <!-- Content for the Add_Edit page -->
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <h1>
                    <%= title %>
                </h1>

                <form class="form" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="id" value="<%= Name._id %>">
                        <label for="NameTextField">Name</label>
                        <input type="text" class="form-control" id="NameTextField" placeholder="Enter the Name"
                            name="Name" value="<%= Name.Name %>" required>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="numberTextField">Phone Number</label>
                        <input type="number" class="form-control" id="PnumberTextField"
                            placeholder="Enter your Phone Number" name="Pnumber" value="<%= name.Pnumber %>" required>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="EmailTextField">Email</label>
                        <input type="text" class="form-control" id="emailTextField" placeholder="Enter your Email"
                            name="Email" value="<%= name.Email %>">
                    </div>
                    <br />
                    <!-- <div class="form-group">
                        <label for="tagTextArea">Tags <span class="text-muted">[use , to separate tags]</span></label>
                        <textarea type="text" class="form-control" id="tagTextArea"
                            placeholder="Enter the tags of the name" name="tags" required>
                        <%= name.tags %>
                    </textarea>
                    </div>
                    <br /> -->
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i>
                        Submit
                    </button>

                    <a href="/contact/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>
                        Cancel
                    </a>

                </form>
            </div>

        </div>
    </div>

    <%- include ../partials/footer.ejs %>